    function filter() {
            var bdate = $('#bdate').val();
            var edate = $('#edate').val();
            var region = $('#filter-region').find(":selected").val();
            var changer = $('#filter-changer').find(":selected").val();

            $.ajax({
                type: "POST",
                cache: true,
                data: {
                    region: region,
                    changer: changer,
                    begdate: bdate,
                    enddate: edate
                },
                beforeSend: function () {
                    $('#ibox-load').children('.ibox-content').toggleClass('sk-loading');
                },
                complete: function () {
                    $('#ibox-load').children('.ibox-content').toggleClass('sk-loading');
                },
                success: function () {
                },
                error: function (err) {
                    console.log(err);
                },
                url: "@Url.Action("_ChangerOperationsList", "ChangerOperations")"
            }).done(function (result) {
                $('#output').html(result);

                initDataTable();
            });
    }

