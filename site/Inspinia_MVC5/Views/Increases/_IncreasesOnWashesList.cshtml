@model IEnumerable<Inspinia_MVC5.Models.GetIncreaseOnWashes_Result>

<table id="table-increases" class="display table table-striped table-bordered table-hover responsive">
    <thead>
        <tr>
            <th>Регион</th>
            <th>ID Мойки</th>
            <th>Название мойки</th>
            <th>Адрес мойки</th>
            <th>Сумма</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var n in Model)
        {
            <tr>
                <td>@n.region</td>
                <td>@n.IDWash</td>
                <td>@n.washName</td>
                <td>
                    <a class="btn btn-lg btn-outline-info" href="@Url.Action("IncreasesOnPostsView", "Increases", new {IDWash = n.IDWash})">@n.washAddress</a>
                </td>
                <td>@n.amount</td>
            </tr>
        }
    </tbody>
</table>


