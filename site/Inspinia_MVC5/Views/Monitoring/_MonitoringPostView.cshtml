@model Inspinia_MVC5.Helpers.InfoPost

<h2>@*@Model.Post.Wash.Region.Name/@Model.Post.Wash.Name/*@<strong>@Model.Post.Name</strong></h2>
<hr />
<div class="row">
    <div class="col-lg-4">
        @if (Model.Balance == "Не определено")
        {
            <h4 id="label-balance" style="display:inline" class="label label-danger">Баланс</h4>
        }
        else
        {
            <h4 id="label-balance" style="display:inline" class="label label-primary">Баланс</h4>
        }
        <h2>@Model.Balance</h2>
    </div>
    <div class="col-lg-4">
        @if (Model.Function == "Не определено")
        {
            <h4 id="label-function" style="display:inline" class="label label-danger">Функция</h4>
        }
        else
        {
            <h4 id="label-function" style="display:inline" class="label label-primary">Функция</h4>
        }
        <h2>@Model.Function</h2>
    </div>
    <div class="col-lg-4">
        @if (Model.State == "Нет доступа")
        {
            <h4 id="label-state" style="display:inline" class="label label-danger">Состояние</h4>
            <h2 id="state">Нет доступа</h2>
        }
        else
        {
            <h4 id="label-state" style="display:inline" class="label label-primary">Состояние</h4>
            <h2 id="state">Доступен</h2>
        }
    </div>
</div>

