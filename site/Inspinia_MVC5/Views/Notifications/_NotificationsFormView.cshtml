<div class="mail-body">
    <form method="get">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Кому:</label>

            <div class="col-sm-10"><input id="input-who" type="text" class="form-control" placeholder="Введите номер телефона/название чата" value=""></div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Тема:</label>

            <div class="col-sm-10"><input id="input-theme" type="text" class="form-control" placeholder="Введите тему оповещения (необязательно)" value=""></div>
        </div>
    </form>
</div>

<div class="mail-text">
    <textarea id="input-text" class="form-control" placeholder="Введите текст оповещения..." rows="5"></textarea>
</div>
<div class="mail-body">
    <button id="btn-send-all" class="btn btn-info btn-sm"><i class="fa fa-reply"></i> Отправить всем</button>
    <button id="btn-send" class="btn btn-primary btn-sm"><i class="fa fa-reply"></i> Отправить</button>
    <br />
    <a style="margin-top:10px;" id="btn-history" class="btn btn-secondary btn-sm" href="@Url.Action("NotificationsHistoryView","Notifications")"><i class="fa fa-history"></i> История оповещений</a>
</div>
